header
    div.header-hero
        a(href="/")
            img(src="/images/logo.svg", alt="Site Logo" width="35", height="auto")
        nav.navbar 
            ul.nav-links 
                li
                    if isLoggedIn
                        a(href="/user") #{user.username}
                    else
                        a(href="/login") Sign In
                li
                    a#search-toggle(href="javascript:void(0);") Search 
                    //-a(href="/register") Register
                li
                    a(href="/contact") Contact
        .library-link 
            a(href="/user") My Library

    //- background overlay (initially hidden)
    #overlay.hidden 

    //- search dropdown (initially hidden)
    #search-dropdown.hidden 
        .search-container 
            form(action="/search" method="GET")
            input(type="text" name="q" placeholder="I'm searching for..." required)

    script(defer src="/js/header.js")

             
            