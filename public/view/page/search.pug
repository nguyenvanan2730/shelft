extends ../layout/layout

block content 
  main(class="home-page")
    section(class="book-section")
      h2 Search Results for "#{query}":

      if books.length === 0
        p(class="text-400") Oops! We couldn't find the book you're looking for.
      else
        .book-carousel
          each book in books
            .book-search-card
              a(href=`/book/${book.book_id}`)
                img.book-cover(src=`/images/${book.cover_image}` alt=book.title)
                //More book info
                .search-info
                  h3= book.title
                  p.search-text Author: #{book.author}
